{
    "schemaVersion": 1,
    "id": "grid",
    "version": "${version}",
    "environment": "client",
    "entrypoints": {
        "client": [ "de.guntram.mcmod.grid.Grid" ],
        "cotton-client-commands": ["de.guntram.mcmod.grid.Grid"],
        "modmenu": [ "de.guntram.mcmod.grid.MMConfigurationHandler" ]
    },
    "custom": {
        "modupdater": {
            "strategy": "json",
            "url": "https://raw.githubusercontent.com/gbl/ModVersionInfo/master/Grid.json"
        }
    },
    "mixins": [
      	"mixins.grid.json"
    ],
    "depends": {
        "fabric": "*"
    },
    "recommends": {
        "modmenu" : "*"
    },
    "name": "Grid",
    "description": "Markers to help with counting blocks, building circles, and showing possible mob spawn locations",
    "icon": "icon.png",
    "authors": [ "Giselbaer" ],
    "contact": {
        "homepage": "https://www.curseforge.com/minecraft/mc-mods/grid",
        "sources": "https://github.com/gbl/Grid",
        "issues": "https://github.com/gbl/Grid/issues"
    }
}
